<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alarm.AlarmContainerFragment">
<!--    app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
<!--    tools:showIn="@layout/activity_main">-->

    <FrameLayout
        android:id="@+id/alarm_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

<!--    -->
    <LinearLayout
        android:id="@+id/alarm_editor_bottom_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintTop_toBottomOf="@+id/alarm_container">

        <include
            android:id="@+id/alarm_editor_bottom_bar_options"
            layout="@layout/alarm_editor_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>